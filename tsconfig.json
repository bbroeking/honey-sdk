{
  "compilerOptions": {
    "types": ["mocha", "chai", "chai-as-promised"],
    "typeRoots": ["./node_modules/@types", "/usr/local/lib/node_modules"],
    "target": "es2020",
    "lib": ["dom", "es2019"],
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "jsx": "react",
    "baseUrl": "./",
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
